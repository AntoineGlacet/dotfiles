. ~/.shell/env_functions

# Path settings
pathprepend "${HOME}/bin" PATH
pathprepend "${HOME}/usr/bin" PATH
pathprepend "${HOME}/.local/bin" PATH

# The current directory should never be in $PATH
pathremove "." PATH
pathremove "" PATH

pathprepend "$HOME/.local/bin" PATH

# Ruby
# Install Ruby Gems to ~/gems
export GEM_HOME="$HOME/gems"
pathprepend "$HOME/gems/bin" PATH

# GO
pathprepend "/usr/local/go/bin" PATH

# snap
pathprepend "/snap/bin" PATH

# OpenCode CLI
pathprepend "$HOME/.opencode/bin" PATH

# Load local environment (personal settings, secrets)
# This file is not tracked in git - see shell/env.local.template
[[ -f ~/.shell/env.local ]] && . ~/.shell/env.local
