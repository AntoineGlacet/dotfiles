{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "share": "manual",
  "autoupdate": true,
  "mcp": {
    "open-metadata": {
      "type": "remote",
      "url": "https://datacatalog.kapg.digital/mcp",
      "headers": {
        "Authorization": "Bearer {env:OPENMETADATA_MCP_TOKEN}"
      },
      "enabled": false
    },
    "bigquery": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@toolbox-sdk/server",
        "--prebuilt",
        "bigquery",
        "--stdio"
      ],
      "environment": {
        "BIGQUERY_PROJECT": "{env:GCP_PROJECT}"
      },
      "enabled": false
    }
  }
}
